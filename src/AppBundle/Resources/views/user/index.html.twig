{% extends 'base.html.twig' %}

{% block body %}
    <h3>User list</h3>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Twitter</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.twitter }}</td>
                <td>
                    <a class="btn btn-default btn-xs" href="{{ path('user_show', { 'id': user.id }) }}">Show</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
